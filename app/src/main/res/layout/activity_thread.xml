<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_thread"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sddd.tfn.ffmpeg264inlinux.ThreadActivity">

    <TextView
        android:id="@+id/thread_sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单独线程中视频转码测试" />

    <Button
        android:id="@+id/thread_trans_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thread_sample_text"
        android:layout_marginTop="20dp"
        android:text="开始转码" />

    <RelativeLayout
        android:id="@+id/thread_start_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thread_trans_btn"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/thread_start_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始转码时间：" />

        <TextView
            android:id="@+id/thread_start_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/thread_start_txt"
            android:text="00:00:00" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/thread_end_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thread_start_rl"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/thread_end_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束转码时间：" />

        <TextView
            android:id="@+id/thread_end_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/thread_end_txt"
            android:text="00:00:00" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/thread_total_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thread_end_rl"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/thread_total_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转码总时间：    " />

        <TextView
            android:id="@+id/thread_total_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/thread_total_txt"
            android:text="00" />

        <TextView
            android:id="@+id/thread_total_time_suff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/thread_total_time_txt"
            android:text=" 秒" />
    </RelativeLayout>

    <TextView
        android:id="@+id/thread_result_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thread_total_rl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="转码成功！"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/thread_wait_rl"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:background="#3C0AAA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/thread_progressBar1"
                style="@style/MyDialogStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="正在线程转码，请稍后"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
